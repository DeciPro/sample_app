<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <h1>
        <%= link_to 'Meetings', user_meetings_path(@user) %>
      </h1>
      <h1>
        <%= link_to 'Create Meeting', new_user_meeting_path(@user) %>
      </h1>
    </section>
  </aside>
</div>
